#
# mount n times
#
mount_n()
{
	HOSTID=$1
	MNTDIR_PREFIX=$2
	COUNT=$3
	SUBDIR=$4

	for I in `seq $COUNT` ; do
		MNT=`printf $MNTDIR_PREFIX%04d $I`
		$GFSERVICE mount $HOSTID $MNT -o modules=subdir \
			-o subdir=$SUBDIR $MOUNT_OPTIONS
		if [ $? -ne 0 ]; then
			log_warn "gfservice mount failed $HOSTID mnt$I"
			return 1
		fi
	done

	return 0
}
